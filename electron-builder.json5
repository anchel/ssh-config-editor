// @see - https://www.electron.build/configuration/configuration
{
  $schema: 'https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json',
  appId: 'com.anchel.app.desktop.sshce',
  asar: true,
  productName: 'SSH Config Editor',
  directories: {
    output: 'release',
  },
  files: ['dist', 'dist-electron'],
  publish: null,
  mac: {
    // type: "development",
    // type: "distribution",
    // hardenedRuntime: true,
    target: ['dmg'],
    artifactName: '${name}-darwin-${arch}-${version}-Installer.${ext}',
    // category: "public.app-category.developer-tools",
    // minimumSystemVersion: '12.0',
    provisioningProfile: 'build/profilesshconfigeditor.provisionprofile',
    extendInfo: {
      // LSMinimumSystemVersion: "12.0.0", // 设置最低支持 macOS 版本，避免提示没有提交intel架构的应用
      ITSAppUsesNonExemptEncryption: false,
      // 是否使用加密
    },
    notarize: {
      teamId: '9J3DW26EZ6',
    },
    // gatekeeperAssess: true,
  },
  mas: {
    entitlements: 'build/entitlements.mas.plist',
    entitlementsInherit: 'build/entitlements.mas.inherit.plist',
  },
  win: {
    target: [
      {
        target: 'nsis',
//        arch: ['x64'],
      },
    ],
    artifactName: '${name}-windows-${arch}-${version}-Setup.${ext}',
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  },
  linux: {
    target: ['AppImage'],
    artifactName: '${name}-linux-${arch}-${version}.${ext}',
  },
}
